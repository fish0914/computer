 import React, { useState, useEffect, useCallback, useRef } from 'react';
import { Trophy, RotateCcw, Play, Pause, ArrowUp, ArrowDown, ArrowLeft, ArrowRight } from 'lucide-react';

// 遊戲設定常數
const GRID_SIZE = 20;
const INITIAL_SPEED = 150;
const SPEED_INCREMENT = 2; // 每次吃到食物減少的毫秒數 (變快)
const MIN_SPEED = 60; // 最快速度限制

// 方向定義
const DIRECTIONS = {
  UP: { x: 0, y: -1 },
  DOWN: { x: 0, y: 1 },
  LEFT: { x: -1, y: 0 },
  RIGHT: { x: 1, y: 0 },
};

const SnakeGame = () => {
  // 遊戲狀態
  const [snake, setSnake] = useState([{ x: 10, y: 10 }]);
  const [food, setFood] = useState({ x: 15, y: 10 });
  const [direction, setDirection] = useState(DIRECTIONS.RIGHT);
  const [nextDirection, setNextDirection] = useState(DIRECTIONS.RIGHT);
  const [isGameOver, setIsGameOver] = useState(false);
  const [isPaused, setIsPaused] = useState(false);
  const [score, setScore] = useState(0);
  const [highScore, setHighScore] = useState(0);
  const [speed, setSpeed] = useState(INITIAL_SPEED);
  const [gameStarted, setGameStarted] = useState(false);
  
  // 用於解決 React閉包陷阱與按鍵快速連點問題
  const directionRef = useRef(DIRECTIONS.RIGHT);
  const gameLoopRef = useRef(null);

  // 初始化/讀取最高分
  useEffect(() => {
    const saved = localStorage.getItem('snakeHighScore');
    if (saved) setHighScore(parseInt(saved));
  }, []);

  // 產生隨機食物位置 (不與蛇重疊)
  const generateFood = useCallback((currentSnake) => {
    let newFood;
    let isOnSnake;
    do {
      newFood = {
        x: Math.floor(Math.random() * GRID_SIZE),
        y: Math.floor(Math.random() * GRID_SIZE),
      };
      // eslint-disable-next-line no-loop-func
      isOnSnake = currentSnake.some(segment => segment.x === newFood.x && segment.y === newFood.y);
    } while (isOnSnake);
    return newFood;
  }, []);

  // 遊戲重置
  const resetGame = () => {
    setSnake([{ x: 10, y: 10 }]);
    setFood(generateFood([{ x: 10, y: 10 }]));
    setDirection(DIRECTIONS.RIGHT);
    setNextDirection(DIRECTIONS.RIGHT);
    directionRef.current = DIRECTIONS.RIGHT;
    setIsGameOver(false);
    setScore(0);
    setSpeed(INITIAL_SPEED);
    setIsPaused(false);
    setGameStarted(true);
  };

  // 鍵盤控制
  useEffect(() => {
    const handleKeyDown = (e) => {
      if (!gameStarted && e.code === 'Space') {
        resetGame();
        return;
      }

      // 防止捲動頁面
      if (['ArrowUp', 'ArrowDown', 'ArrowLeft', 'ArrowRight', 'Space'].includes(e.code)) {
        e.preventDefault();
      }

      if (e.code === 'Space') {
        setIsPaused(prev => !prev);
        return;
      }

      if (isPaused || isGameOver) return;

      const currentDir = directionRef.current;

      switch (e.code) {
        case 'ArrowUp':
          if (currentDir !== DIRECTIONS.DOWN) setNextDirection(DIRECTIONS.UP);
          break;
        case 'ArrowDown':
          if (currentDir !== DIRECTIONS.UP) setNextDirection(DIRECTIONS.DOWN);
          break;
        case 'ArrowLeft':
          if (currentDir !== DIRECTIONS.RIGHT) setNextDirection(DIRECTIONS.LEFT);
          break;
        case 'ArrowRight':
          if (currentDir !== DIRECTIONS.LEFT) setNextDirection(DIRECTIONS.RIGHT);
          break;
        default:
          break;
      }
    };

    window.addEventListener('keydown', handleKeyDown);
    return () => window.removeEventListener('keydown', handleKeyDown);
  }, [isPaused, isGameOver, gameStarted]);

  // 虛擬按鍵控制處理
  const handleVirtualControl = (newDir) => {
    if (isPaused || isGameOver || !gameStarted) return;
    
    const currentDir = directionRef.current;
    
    if (newDir === DIRECTIONS.UP && currentDir !== DIRECTIONS.DOWN) setNextDirection(DIRECTIONS.UP);
    if (newDir === DIRECTIONS.DOWN && currentDir !== DIRECTIONS.UP) setNextDirection(DIRECTIONS.DOWN);
    if (newDir === DIRECTIONS.LEFT && currentDir !== DIRECTIONS.RIGHT) setNextDirection(DIRECTIONS.LEFT);
    if (newDir === DIRECTIONS.RIGHT && currentDir !== DIRECTIONS.LEFT) setNextDirection(DIRECTIONS.RIGHT);
  };

  // 遊戲核心迴圈
  useEffect(() => {
    if (!gameStarted || isPaused || isGameOver) return;

    const moveSnake = () => {
      setSnake(prevSnake => {
        const head = prevSnake[0];
        const newHead = {
          x: head.x + nextDirection.x,
          y: head.y + nextDirection.y,
        };

        // 更新當前實際移動方向 (防止一影格內轉兩次頭導致自殺)
        directionRef.current = nextDirection;
        setDirection(nextDirection);

        // 1. 檢查碰撞牆壁
        if (
          newHead.x < 0 ||
          newHead.x >= GRID_SIZE ||
          newHead.y < 0 ||
          newHead.y >= GRID_SIZE
        ) {
          setIsGameOver(true);
          return prevSnake;
        }

        // 2. 檢查碰撞自己
        if (prevSnake.some(segment => segment.x === newHead.x && segment.y === newHead.y)) {
          setIsGameOver(true);
          return prevSnake;
        }

        const newSnake = [newHead, ...prevSnake];

        // 3. 檢查吃到食物
        if (newHead.x === food.x && newHead.y === food.y) {
          setScore(s => {
            const newScore = s + 10;
            if (newScore > highScore) {
              setHighScore(newScore);
              localStorage.setItem('snakeHighScore', newScore.toString());
            }
            return newScore;
          });
          setFood(generateFood(newSnake));
          setSpeed(s => Math.max(MIN_SPEED, s - SPEED_INCREMENT));
        } else {
          // 沒吃到食物，移除尾巴
          newSnake.pop();
        }

        return newSnake;
      });
    };

    gameLoopRef.current = setInterval(moveSnake, speed);
    return () => clearInterval(gameLoopRef.current);
  }, [gameStarted, isPaused, isGameOver, nextDirection, food, speed, highScore, generateFood, nextDirection]);


  return (
    <div className="min-h-screen bg-gray-900 text-white flex flex-col items-center justify-center p-4 font-mono select-none">
      
      {/* 標題與分數板 */}
      <div className="w-full max-w-md mb-4 flex justify-between items-end">
        <div>
          <h1 className="text-3xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-green-400 to-blue-500 mb-1">
            NEON SNAKE
          </h1>
          <div className="flex items-center text-sm text-gray-400">
            <Trophy size={14} className="mr-1 text-yellow-500" />
            最高分: {highScore}
          </div>
        </div>
        <div className="text-right">
          <div className="text-4xl font-bold text-green-400">{score}</div>
          <div className="text-xs text-gray-500">SCORE</div>
        </div>
      </div>

      {/* 遊戲主畫面 */}
      <div className="relative group">
        {/* 邊框光暈效果 */}
        <div className={`absolute -inset-1 bg-gradient-to-r from-green-600 to-blue-600 rounded-lg blur opacity-25 group-hover:opacity-50 transition duration-1000 ${isGameOver ? 'from-red-600 to-orange-600 opacity-75' : ''}`}></div>
        
        <div 
          className="relative bg-gray-800 border-2 border-gray-700 rounded-lg shadow-2xl overflow-hidden"
          style={{
            width: 'min(90vw, 400px)',
            height: 'min(90vw, 400px)',
            display: 'grid',
            gridTemplateColumns: `repeat(${GRID_SIZE}, 1fr)`,
            gridTemplateRows: `repeat(${GRID_SIZE}, 1fr)`,
          }}
        >
          {/* 網格背景 (可選) */}
          <div className="absolute inset-0 opacity-10 pointer-events-none" 
               style={{ 
                 backgroundImage: 'linear-gradient(#374151 1px, transparent 1px), linear-gradient(90deg, #374151 1px, transparent 1px)', 
                 backgroundSize: `${100/GRID_SIZE}% ${100/GRID_SIZE}%` 
               }}>
          </div>

          {/* 渲染蛇 */}
          {snake.map((segment, i) => (
            <div
              key={`${segment.x}-${segment.y}`}
              style={{
                gridColumnStart: segment.x + 1,
                gridRowStart: segment.y + 1,
              }}
              className={`
                rounded-sm
                ${i === 0 ? 'z-20' : 'z-10'}
                ${isGameOver ? 'bg-red-500' : (i === 0 ? 'bg-green-400' : 'bg-green-600')}
                ${i === 0 ? 'shadow-[0_0_10px_rgba(74,222,128,0.8)]' : ''}
                transition-all duration-75
              `}
            >
              {/* 蛇眼睛 */}
              {i === 0 && !isGameOver && (
                <div className="relative w-full h-full">
                  <div className={`absolute w-[20%] h-[20%] bg-black rounded-full top-[20%] ${
                    direction === DIRECTIONS.RIGHT ? 'right-[20%]' : 
                    direction === DIRECTIONS.LEFT ? 'left-[20%]' : 
                    'left-[20%]' // Up/Down 簡單處理
                  }`}></div>
                   <div className={`absolute w-[20%] h-[20%] bg-black rounded-full bottom-[20%] ${
                    direction === DIRECTIONS.RIGHT ? 'right-[20%]' : 
                    direction === DIRECTIONS.LEFT ? 'left-[20%]' : 
                    'left-[60%]' // Up/Down 簡單處理
                  }`}></div>
                </div>
              )}
            </div>
          ))}

          {/* 渲染食物 */}
          <div
            style={{
              gridColumnStart: food.x + 1,
              gridRowStart: food.y + 1,
            }}
            className="bg-pink-500 rounded-full shadow-[0_0_10px_rgba(236,72,153,0.8)] animate-pulse z-10 scale-75"
          ></div>

          {/* 開始/暫停/結束 遮罩層 */}
          {(!gameStarted || isGameOver || isPaused) && (
            <div className="absolute inset-0 bg-black/60 backdrop-blur-sm flex flex-col items-center justify-center z-30 text-center p-4">
              {isGameOver ? (
                <>
                  <h2 className="text-4xl font-bold text-red-500 mb-2">GAME OVER</h2>
                  <p className="text-gray-300 mb-6">最終得分: {score}</p>
                  <button 
                    onClick={resetGame}
                    className="flex items-center gap-2 px-6 py-3 bg-green-600 hover:bg-green-500 text-white rounded-full font-bold transition transform hover:scale-105 shadow-lg active:scale-95"
                  >
                    <RotateCcw size={20} /> 再玩一次
                  </button>
                </>
              ) : !gameStarted ? (
                <>
                  <h2 className="text-3xl font-bold text-white mb-6">準備好了嗎？</h2>
                  <div className="flex flex-col gap-2 mb-6 text-sm text-gray-400">
                    <p>電腦: 使用方向鍵移動</p>
                    <p>手機: 使用下方按鈕</p>
                  </div>
                  <button 
                    onClick={resetGame}
                    className="flex items-center gap-2 px-8 py-3 bg-blue-600 hover:bg-blue-500 text-white rounded-full font-bold transition transform hover:scale-105 shadow-lg active:scale-95"
                  >
                    <Play size={20} /> 開始遊戲
                  </button>
                </>
              ) : (
                <>
                  <h2 className="text-3xl font-bold text-white mb-6">暫停中</h2>
                  <button 
                    onClick={() => setIsPaused(false)}
                    className="flex items-center gap-2 px-8 py-3 bg-yellow-600 hover:bg-yellow-500 text-white rounded-full font-bold transition transform hover:scale-105 shadow-lg active:scale-95"
                  >
                    <Play size={20} /> 繼續
                  </button>
                </>
              )}
            </div>
          )}
        </div>
      </div>

      {/* 操作控制區 */}
      <div className="w-full max-w-md mt-6 flex justify-between items-center px-2">
        
        {/* 左側功能鍵 */}
        <div className="flex gap-4">
          <button 
            onClick={() => setIsPaused(prev => !prev)}
            disabled={!gameStarted || isGameOver}
            className="p-3 bg-gray-800 rounded-full text-gray-400 hover:text-white hover:bg-gray-700 disabled:opacity-30 disabled:cursor-not-allowed transition"
            title={isPaused ? "繼續" : "暫停 (空白鍵)"}
          >
            {isPaused ? <Play size={24} /> : <Pause size={24} />}
          </button>
          
          <button 
            onClick={() => {
              if(window.confirm('確定要重新開始嗎？')) resetGame();
            }}
            disabled={!gameStarted}
            className="p-3 bg-gray-800 rounded-full text-gray-400 hover:text-red-400 hover:bg-gray-700 disabled:opacity-30 disabled:cursor-not-allowed transition"
            title="重新開始"
          >
            <RotateCcw size={24} />
          </button>
        </div>

        {/* 手機版虛擬方向鍵 (僅在螢幕較小時顯示明顯，但在這裡我們讓它一直顯示以便測試) */}
        <div className="grid grid-cols-3 gap-1">
          <div></div>
          <button 
            className="w-14 h-14 bg-gray-800 rounded-lg flex items-center justify-center active:bg-blue-600 active:scale-95 transition touch-manipulation shadow-md border-b-4 border-gray-900 active:border-b-0 active:translate-y-1"
            onPointerDown={(e) => { e.preventDefault(); handleVirtualControl(DIRECTIONS.UP); }}
          >
            <ArrowUp size={24} />
          </button>
          <div></div>
          
          <button 
            className="w-14 h-14 bg-gray-800 rounded-lg flex items-center justify-center active:bg-blue-600 active:scale-95 transition touch-manipulation shadow-md border-b-4 border-gray-900 active:border-b-0 active:translate-y-1"
            onPointerDown={(e) => { e.preventDefault(); handleVirtualControl(DIRECTIONS.LEFT); }}
          >
            <ArrowLeft size={24} />
          </button>
          
          <button 
            className="w-14 h-14 bg-gray-800 rounded-lg flex items-center justify-center active:bg-blue-600 active:scale-95 transition touch-manipulation shadow-md border-b-4 border-gray-900 active:border-b-0 active:translate-y-1"
            onPointerDown={(e) => { e.preventDefault(); handleVirtualControl(DIRECTIONS.DOWN); }}
          >
            <ArrowDown size={24} />
          </button>
          
          <button 
            className="w-14 h-14 bg-gray-800 rounded-lg flex items-center justify-center active:bg-blue-600 active:scale-95 transition touch-manipulation shadow-md border-b-4 border-gray-900 active:border-b-0 active:translate-y-1"
            onPointerDown={(e) => { e.preventDefault(); handleVirtualControl(DIRECTIONS.RIGHT); }}
          >
            <ArrowRight size={24} />
          </button>
        </div>
      </div>
      
      <div className="mt-4 text-xs text-gray-600">
        Tips: 電腦按空白鍵暫停，手機點擊左下角按鈕。
      </div>

    </div>
  );
};

export default SnakeGame;
